{% extends 'baseBack.html.twig' %}

{% block title %}Créer un Formulaire Personnalisé{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1 class="mb-4">Créer un Formulaire Personnalisé</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
    
    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(form.fieldLabel, null, {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.fieldLabel, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.fieldLabel, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_label(form.fieldType, null, {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.fieldType, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.fieldType, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>
    </div>

    <div class="text-end mt-4">
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
