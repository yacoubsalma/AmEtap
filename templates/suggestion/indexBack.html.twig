{% extends 'baseBack.html.twig' %}

{% block title %}Suggestion Management{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row mt-5">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Suggestions</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for suggestion in suggestions %}
                        <tr>
                            <td>{{ suggestion.msg }}</td>
                            <td>
                                {{ include('suggestion/_delete_form.html.twig', { 'suggestion': suggestion }) }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
