{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}
{% block carousel %}
<div class="container-fluid bg-breadcrumb" style="background-image: url('{{ asset('./FrontOffice/img/event.jpg') }}'); background-size: cover; background-position: center;">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class=" display-3 mb-4" style="color: #ffffff;">Evenement</h3>

        <ol class="breadcrumb justify-content-center mb-0">
            <!-- Breadcrumb items here -->
        </ol>    
    </div>
</div>

{% endblock %}
{% block content %}
    <div class="container">
        <div style="margin-top: 40px;"></div>


        <div class="row">
            {% for evenement in evenements %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{ asset('uploads/' ~ evenement.img) }}" class="card-img-top" alt="{{ evenement.nome }}">

                        <h5 class="card-title">{{ evenement.nome }}</h5>
                        <p class="card-text"><strong>Date de début:</strong> {{ evenement.dateD ? evenement.dateD|date('Y-m-d') : 'Unknown' }}</p>
                        <p class="card-text"><strong>Date de fin:</strong> {{ evenement.dateF ? evenement.dateF|date('Y-m-d') : 'Unknown' }}</p>
                        <p class="card-text"><strong>Lieu:</strong> {{ evenement.lieu }}</p>
                        <p class="card-text"><strong>Description :</strong> {{ evenement.ShortD }}</p>
                        <p class="card-text"><strong>Somme allouée:</strong> {{ evenement.sommeA }}</p>
                            <a href="{{ path('app_reservation_new', {'ide': evenement.ide}) }}" class="btn btn-info btn-sm">S'inscrire</a>
                       
                    </div>
                </div>
            {% else %}
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text text-center">No records found</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
