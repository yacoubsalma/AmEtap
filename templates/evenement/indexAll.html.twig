{% extends 'baseBack.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="my-4">Evenements</h1>

        <div class="row">
            {% for evenement in evenements %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{ asset('uploads/' ~ evenement.img) }}" class="img-fluid w-100 rounded-top" alt="{{ evenement.nome }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ evenement.nome }}</h5>
                            <p class="card-text"><strong>Date de début:</strong> {{ evenement.dateD ? evenement.dateD|date('Y-m-d') : 'Inconnue' }}</p>
                            <p class="card-text"><strong>Date de fin:</strong> {{ evenement.dateF ? evenement.dateF|date('Y-m-d') : 'Inconnue' }}</p>
                            <p class="card-text"><strong>Lieu:</strong> {{ evenement.lieu }}</p>
                            <p class="card-text"><strong>Description:</strong> {{ evenement.ShortD }}</p>
                            <p class="card-text"><strong>Somme allouée:</strong> {{ evenement.sommeA }}</p>

                            <a href="{{ path('app_evenement_show', {'ide': evenement.ide}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('app_evenement_edit', {'ide': evenement.ide}) }}" class="btn btn-primary btn-sm">Edit</a>
                            {{ include('evenement/_delete_form.html.twig', {'ide': evenement.ide}) }}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text text-center">Aucun enregistrement trouvé</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <a href="{{ path('app_evenement_new') }}" class="btn btn-success mt-3">
            <i class="fas fa-plus-circle"></i> Créer nouveau
        </a>
        
        
    </div>
{% endblock %}
